{
  "name": "@mighty-justice/tester",
  "version": "1.0.3",
  "description": "Bootstrap your tests!",
  "main": "dist/tester.cjs.js",
  "module": "dist/tester.esm.js",
  "browser": "dist/tester.umd.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -r dist/*",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint src/*.js",
    "test": "jest test/*.js",
    "test:watch": "npm run test/*.js -- -w",
    "prebuild": "npm run lint",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "view-source-map": "source-map-explorer --html dist/index.js dist/index.map > source.html && open source.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mighty-justice/tester.git"
  },
  "keywords": [
    "javascript",
    "test",
    "reactjs",
    "react",
    "jest",
    "enzyme",
    "test",
    "utils",
    "bootstrap",
    "configuration"
  ],
  "author": "Keven Bouchard <keven@mighty.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mighty-justice/tester/issues"
  },
  "homepage": "https://github.com/mighty-justice/tester#readme",
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js"
  },
  "files": [
    "dist",
    "index.js"
  ],
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "enzyme": ">=3.8"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "gitbook-cli": "^2.3.2",
    "jest": "^23.6.0",
    "jest-environment-jsdom": "^23.4.0",
    "react": "^16.6.3",
    "react-dom": ">=16",
    "react-proptypes": "^1.0.0",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "source-map-explorer": "^1.6.0"
  }
}
